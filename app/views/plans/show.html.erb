<header>
    <p>スケジュール管理アプリ</p>
</header>

<h3>予定詳細</h3>

<div>
  <ul>
    <li><%= link_to "予定を編集する", [:edit,@plan] %></li>
  </ul>
</div>

<table>
    <tr>
      <th>タイトル</th>
      <td><%= @plan.title %></td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= @plan.start_date.to_s(:date_jp) %></td>
    </tr>
    <tr>
      <th>終了日</th>
      <td><%= @plan.end_date.to_s(:date_jp) %></td>
    </tr>
    <tr>
      <th>終日</th>
      <td><%= @plan.all_day ? "○": "" %></td>
    </tr>
    <tr>
      <th>スケジュールメモ</th>
      <td><%= @plan.memo %></td>
    </tr>
</table>

<div>
  <ul>
    <li><%= link_to "予定一覧に戻る", :plans %></li>
  </ul>
</div>