<%= render "shared/header" %>

<main class="mx-auto my-4" style="width: 500px;">
    <h3 class="my-3">予定の編集</h3>

    <%= render "shared/error", obj: @plan %>

    <%= form_with model: @plan do |f| %>
    <table  class="table table-bordered">
        <tr>
        <th><%= f.label :title , "タイトル" %><span class="text-danger"> *</span></th>
        <td><%= f.text_field :title %></td>
        </tr>
        <tr>
        <th><%= f.label :start_date , "開始日" %><span class="text-danger"> *</span></th>
        <td><%= f.date_field :start_date %></td>
        </tr>
        <tr>
        <th><%= f.label :end_date , "終了日" %><span class="text-danger"> *</span></th>
        <td><%= f.date_field :end_date %></td>
        </tr>
        <tr>
        <th><%= f.label :all_day , "終日" %></th>
        <td><%= f.check_box :all_day %></td>
        </tr>
        <tr>
        <th><%= f.label :memo , "スケジュールメモ" %></th>
        <td><%= f.text_area :memo %></td>
    </tr>
    </table>


    <div>
        <div>
            <%= f.submit "編集を完了する", class:"border border-green bg-success text-white p-1" %></li>
        </div>
        <div class="mt-3">
            <%= link_to "予定一覧に戻る", :plans, class: "link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"%></li>
        </div>
    </div>

    <% end %>
</main>