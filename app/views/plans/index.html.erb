<header>
    <p>スケジュール管理アプリ</p>
</header>

<main>
    <h3>予定一覧</h3>

    <% if flash[:notice] %>
    <p class = "notice"><%= flash[:notice] %></p>
    <% end %>

    <p><%= link_to "新規追加", :new_plan , class: "btn btn-outline-primary" %>

    <table>
    <thead>
        <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>更新日時</th>
        <th>参照</th>
        <th>編集</th>
        <th>削除</th>
        </tr>
    </thead>

    <tbody>
        <% @plans.each do |plan| %>
        <tr>
            <td><%= plan.id %></td>
            <td><%= plan.title %></td>
            <td><%= plan.start_date.to_s(:date_jp)%></td>
            <td><%= plan.end_date.to_s(:date_jp) %></td>
            <td class="all_day"><%= plan.all_day ? "○" : "" %></td>
            <td><%= plan.updated_at.to_s(:datetime_jp) %></td>
            <td><%= link_to "詳細", plan %></td>
            <td><%= link_to "編集", [:edit, plan] %></td>
            <td><%= link_to "削除", plan, method: :delete, data: { confirm: "本当に削除しますか？"} %></td>
        </tr>
        <% end %>
    </tbody>
    </table>

    <div class="container">
        <div>
            予定合計数 <%= "#{@plans.count}" %> 件
        </div>
        <div>
            本日の日付 <%= Date.today.to_s(:date_jp) %>
        </div>

    </div>
</main>